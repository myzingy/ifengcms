
body {
    background: transparent url(../images/background.gif);
}

#wrapper {
    background-color: #FFF;
    width: 90%;
    margin: 10px auto auto auto;
    padding: 2em;
    border: 1px solid #808080;
}

#header h1 {
    border-bottom: 1px solid #777;
    color: #555;
    padding-bottom: 0.2em;
}

#content h3 {
    color: #434690;
}

#footer {
    text-align: center;
}
/* Entry Navigation
--------------------------------------------- */

.navigation {
	clear: both;
	font-size: 14px;
	padding:0 20px;
	overflow: hidden;
}
.navigation a {
	background: #e9e9e9;
	border-radius: 3px;
	color: #000;
	cursor: pointer;
	display: inline-block;
	padding: 8px 12px;
}


/* Pagination
--------------------------------------------- */

.pagination a {
	padding: 8px 12px;
	border: 1px solid #F5F5F5;
    border-radius: 25px 25px 25px 25px;
    background-color: #99e999;
}

.pagination .cur a{
	background-color: #F5F5F5;
	font-size:16px;
	text-decoration: none;
}
/* Comments
--------------------------------------------- */
#content thead tr th{
   background-color: #cccccc;
   font-size:16px;
}
#content tfoot tr td{
    background-color: #cccccc;
    font-size:16px;
}
#content tbody tr:nth-child(odd){
   background-color: #efefef;
}

#content tbody tr:hover {
   background-color: #cce!important;
}