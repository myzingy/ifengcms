<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <title>我的更贴</title>
    <!-- 为了确保适当的绘制和触屏缩放 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- 可以禁用其缩放（zooming）功能 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <!-- 对手机设备的一些设置 -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- 样式表的引用 -->
    <link rel="stylesheet" type="text/css" href="css/public.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <!-- jq的引用 -->
    <script src="js/jquery-1.8.3.min.js"></script>
    <!-- 拖拽js -->
    <script type="text/javascript" src="js/iscroll.js"></script>
    <!-- 左侧导航js -->
    <script src="js/jquery.mmenu.min.js"></script>
    <!--去掉微信底部返回栏-->
    <script>
    document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {
    WeixinJSBridge.call('hideToolbar');
    });
    </script>
</head>
    <body>
    	<div>
        <header class="header1">
            <div class="headbox">
                <div class="backbtn" onclick="location.href='javascript:history.go(-1);'"><i class="iconfont">&#xe617;</i></div>
                <div class="title"><h1>我的互动</h1></div>
                <a href="#menu" class="ui-link user"><i class="iconfont">&#xe600;</i></a>
            </div>
        </header>
        <div id="reply">
            <ul class="switch">
                <li class="fl active"><a href="#me-reply" >我的跟贴</a></li>
                <li class="fl"><a href="#reply-me">回复我的</a></li>
                <div class="clear"></div>
            </ul>
            <script type="text/html" id="reply_comment_tpl">
            	<li class="list">
                    <a href="#">
                        <div class="userimg"><img src="{uid|avatar}"></div>
                        <div class="name">
                            <p class="fl">{nickname}</p>
                            <p class="time fr">{addtime}</p>
                            <br class="clear"/>
                        </div>
                        <div class="mag">
                            <p>{subject}</p>
                        </div>
                        <div class="clear"></div>
                    </a>
                </li>
            </script>
            <script type="text/html" id="reply_article_tpl">
            	<li class="columnlist">
                    <div class="title" aid="{aid}">
                        <a href="{url}"><span>原文</span>{title}</a>
                        <b class="triangle"></b>
                    </div>
                    <ul class="review" aid="{aid}"></ul>
                </li>
            </script>
            <div class="columnbox">
                <ul class="column open" id="reply_display_1"></ul>
                <ul class="column" id="reply_display_2"></ul>
                <div class="more">
                    <div class="buttonbox"><button class="morebtn">加载更多</button></div>  
                    <div class="line"></div>
                </div>
            </div>
        </div>
        </div>
        <!-- 侧边导航开始 -->
        <nav id="menu"></nav>
        <!-- 侧边导航结束 -->
    </body>
    <!-- 自己写的一些 -->
    <script type="text/javascript" src="js/public.js"></script>
    <script type="text/javascript" src="js/userreply.js"></script>
</html>
